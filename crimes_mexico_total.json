{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Crimes in Mexico",
  "title": {
    "text": "Crime in Mexico",
    "subtitle": "Total reported crimes, all types, 2015-2024",
    "subtitleColor": "#2E294E",
    "fontSize": 18,
    "font": "sans-serif",
    "anchor": "start",
    "offset": 20
  },
  "background": "#F5F2EB",
  "padding": {"left": 10, "right": 10, "top": 10, "bottom": 10},
  "spacing": 20,
  "vconcat": [
    {
      "width": 800,
      "height": 400,
      "data": {
        "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/crimedata_peryear.csv"
      },
      "transform": [
        {"filter": "datum['year'] >= 2015 && datum['year'] <= 2024"}
      ],
      "mark": {
        "type": "line",
        "point": {"filled": true, "size": 80, "color": "#E4007C"},
        "color": "#E4007C",
        "strokeWidth": 3
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "format": "d",
            "labelFontSize": 11,
            "titleFontSize": 12,
            "grid": false
          }
        },
        "y": {
          "field": "total_crimes",
          "type": "quantitative",
          "title": "Total Crimes",
          "axis": {
            "labelFontSize": 11,
            "titleFontSize": 12,
            "grid": true,
            "gridColor": "#2E294E",
            "gridOpacity": 0.1
          }
        }
      }
    },
    {
      "width": 600,
      "height": 20,
      "layer": [
        {
          "data": {"values": [{}]},
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": -60,
            "fontSize": 10,
            "color": "#2E294E",
            "text": "Source:"
          }
        },
        {
          "data": {"values": [{}]},
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": -20,
            "fontSize": 10,
            "fontStyle": "italic",
            "color": "#2E294E",
            "text": "Secretariado Ejecutivo del Sistema Nacional de Seguridad PÃºblica de MÃ©xico"
          }
        }
      ]
    }
  ],
  "config": {"view": {"stroke": null}}
}