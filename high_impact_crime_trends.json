            "x": {
              "field": "year",
              "type": "quantitative",
              "title": "Year",
              "axis": {
                "format": "d",
                "labelFontSize": 10,
                "titleFontSize": 11,
                "grid": false
              }
            },
            "y": {
              "field": "total",
              "type": "quantitative",
              "title": "Total Crimes",
