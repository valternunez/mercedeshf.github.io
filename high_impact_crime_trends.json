        {
          "width": 380,
          "height": 200,
          "title": {"text": "Kidnapping", "fontSize": 14, "color": "#E4007C"},
          "data": {
            "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/crime_data_per_year_national.csv"
          },
          "transform": [
            {"filter": "datum.type_of_crime == 'Kidnapping'"},
            {"filter": "datum.year >= 2015 && datum.year < 2025"}
          ],
          "mark": {
            "type": "line",
            "point": {"filled": true, "size": 60, "color": "#E4007C"},
            "strokeWidth": 3,
            "color": "#E4007C"
          },
