{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Intentional homicides trends - Mexico",
  "title": {
    "text": "Intentional homicides in Mexico",
    "subtitle": "Homicides per 100,000 people",
    "subtitleColor": "#2E294E",
    "fontSize": 18,
    "font": "sans-serif",
    "anchor": "start",
    "offset": 20
  },
  "background": "#F5F2EB",
  "padding": {"left": 10, "right": 10, "top": 10, "bottom": 10},
  "spacing": 20,
  "vconcat": [
    {
      "width": 800,
      "height": 400,
      "data": {
        "url": "https://api.worldbank.org/v2/country/mex/indicator/VC.IHR.PSRC.P5?date=1990:2023&format=json",
        "format": {"type": "json", "property": "1"}
      },
      "mark": {
        "type": "line",
        "point": {"filled": true, "size": 60, "color": "#E4007C"},
        "strokeWidth": 3,
        "color": "#E4007C"
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "format": "d",
            "labelFontSize": 10,
            "titleFontSize": 11,
            "grid": false
          }
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Rate per 100k",
          "scale": {"domain": [0, 40]},
          "axis": {
            "labelFontSize": 10,
            "titleFontSize": 11,
            "grid": true,
            "gridColor": "#2E294E",
            "gridOpacity": 0.1
          }
        },
        "tooltip": [
          {"field": "date", "title": "Year"},
          {"field": "value", "title": "Homicide Rate", "format": ".2f"}
        ]
      }
    },
    {
      "width": 400,
      "height": 0,
      "layer": [
        {
          "data": {"values": [{}]},
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 280,
            "fontSize": 10,
            "color": "#2E294E",
            "text": "Source: World Bank Data API"
          }
        }
      ]
    }
  ],
  "config": {"view": {"stroke": null}}
}