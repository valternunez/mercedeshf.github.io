{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Theft data",
  "width": "container",
  "height": 400,
  "background": "#F5F2EB",
  "title": [
    {
      "text": "Theft Crimes in Mexico",
      "subtitle": "Annual reported theft incidents, 2015-2024",
      "subtitleColor": "#2E294E",
      "fontSize": 18,
      "font": "sans-serif",
      "anchor": "start",
      "offset": 20
    },
    {
      "text": "Source: Secretariado Ejecutivo del Sistema Nacional de Seguridad Pública de México",
      "orient": "bottom",
      "anchor": "start",
      "fontWeight": "normal",
      "fontSize": 10,
      "fontStyle": "italic",
      "color": "#2E294E",
      "offset": 20
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/theftdata_peryear.csv"
  },
  "transform": [
    {
      "filter": "datum['Año'] >= 2015 && datum['Año'] <= 2024"
    }
  ],
  "mark": {
    "type": "line",
    "point": {
      "filled": true,
      "size": 80,
      "color": "#E4007C"
    },
    "color": "#E4007C",
    "strokeWidth": 3
  },
  "encoding": {
    "x": {
      "field": "Año",
      "type": "quantitative",
      "title": "Year",
      "axis": {
        "format": "d",
        "labelFontSize": 11,
        "titleFontSize": 12,
        "grid": false
      }
    },
    "y": {
      "field": "total_crimes",
      "type": "quantitative",
      "title": "Total Crimes",
      "axis": {
        "labelFontSize": 11,
        "titleFontSize": 12,
        "grid": true,
        "gridColor": "#2E294E",
        "gridOpacity": 0.1
      }
    }
  },
  "config": {
    "view": {
      "stroke": null
    }
  }
}