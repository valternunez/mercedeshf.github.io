{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Crime data comparison",
  "title": {
    "text": "'High Impact' Crime Trends in Mexico",
    "subtitle": "Comparing kidnapping, extortion, homicide, and feminicide, 2015-2024",
    "subtitleColor": "#2E294E",
    "fontSize": 18,
    "anchor": "start",
    "offset": 30
  },
  "background": "#F5F2EB",
  "columns": 2,
  "concat": [
    {
      "title": {
        "text": "Kidnapping",
        "color": "#E4007C"
      },
      "width": 250,
      "height": 180,
      "data": {
        "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/kidnappingdata_peryear.csv"
      },
      "mark": {
        "type": "line",
        "point": {
          "filled": true,
          "color": "#E4007C"
        },
        "color": "#E4007C"
      },
      "encoding": {
        "x": {
          "field": "A単o",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "format": "d"
          }
        },
        "y": {
          "field": "total_crimes",
          "type": "quantitative",
          "title": "Total"
        }
      }
    },
    {
      "title": {
        "text": "Extortion",
        "color": "#2E294E"
      },
      "width": 250,
      "height": 180,
      "data": {
        "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/extortiondata_peryear.csv"
      },
      "mark": {
        "type": "line",
        "point": {
          "filled": true,
          "color": "#2E294E"
        },
        "color": "#2E294E"
      },
      "encoding": {
        "x": {
          "field": "A単o",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "format": "d"
          }
        },
        "y": {
          "field": "total_crimes",
          "type": "quantitative",
          "title": "Total"
        }
      }
    },
    {
      "title": {
        "text": "Homicide",
        "color": "#1B998B"
      },
      "width": 250,
      "height": 180,
      "data": {
        "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/homicidedata_peryear.csv"
      },
      "mark": {
        "type": "line",
        "point": {
          "filled": true,
          "color": "#1B998B"
        },
        "color": "#1B998B"
      },
      "encoding": {
        "x": {
          "field": "A単o",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "format": "d"
          }
        },
        "y": {
          "field": "total_crimes",
          "type": "quantitative",
          "title": "Total"
        }
      }
    },
    {
      "title": {
        "text": "Feminicide",
        "color": "#F1BF3A"
      },
      "width": 250,
      "height": 180,
      "data": {
        "url": "https://raw.githubusercontent.com/mercedeshf/mercedeshf.github.io/refs/heads/main/feminicidedata_peryear.csv"
      },
      "mark": {
        "type": "line",
        "point": {
          "filled": true,
          "color": "#F1BF3A"
        },
        "color": "#F1BF3A"
      },
      "encoding": {
        "x": {
          "field": "A単o",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "format": "d"
          }
        },
        "y": {
          "field": "total_crimes",
          "type": "quantitative",
          "title": "Total"
        }
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    },
    "axis": {
      "gridOpacity": 0.1,
      "gridColor": "#2E294E"
    }
  }
}